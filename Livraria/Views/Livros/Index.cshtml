@model IEnumerable<Livraria.Model.Models.Livro>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Livros</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <img class="capa img-fluid border rounded"
                src="@Html.DisplayFor(modelItem => item.Capa)" alt="">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td class="">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>

            </td>
        </tr>
}
    </tbody>
</table>

<style>
    .capa {
        height: 120px;
        width: auto;
        transition: height 1s;
    }
    .capa:hover {
        height: 150px;
        cursor: pointer;
    }
</style>